<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!-- Inject by constructor -->
    <bean id="person2" class="DependentCollection.Person">
        <constructor-arg name="name" type="String" value="Vu Thu Phuong"></constructor-arg>
        <constructor-arg name="age" type="int" value="18"></constructor-arg>
        <constructor-arg name="addresses">
            <list>
                <ref bean="address1" />
                <ref bean="address2" />
            </list>
        </constructor-arg>
        <constructor-arg name="emails">
            <list>
                <value>abc@gmail.com</value>
                <value>def@yahoo.com</value>
            </list>
        </constructor-arg>
        <constructor-arg name="subjects">
            <map>
                <entry key="1" value="Math"/>
                <entry key="2" value="Physics"/>
                <entry key="3" value="Chemistry"/>
            </map>
        </constructor-arg>
        <constructor-arg name="phoneNumber">
            <set>
                <value>0356027937</value>
            </set>
        </constructor-arg>
    </bean>

    <!-- Inject by setter -->
    <bean id="person" class="DependentCollection.Person">
        <property name="name" value="Pham Tuan Anh"></property>
        <property name="age" value="20"></property>
        <property name="addresses">
            <list>
                <ref bean="address2" />
            </list>
        </property>
        <property name="emails">
            <list>
                <value>ghi@hotmail.com</value>
                <value>klm@zzz.com</value>
            </list>
        </property>
        <property name="subjects">
            <map>
                <entry key="1" value="History"/>
                <entry key="2" value="geography"/>
                <entry key="3" value="civicEducation"/>
            </map>
        </property>
        <property name="phoneNumber">
            <set>
                <value>0985847306</value>
            </set>
        </property>
    </bean>

    <bean id="address1" class="DependentCollection.Address">
        <property name="country" value="Viet Nam"></property>
        <property name="province" value="Ha Noi"></property>
        <property name="district" value="Thanh Xuan"></property>
    </bean>
    <bean id="address2" class="DependentCollection.Address">
        <property name="country" value="Viet Nam"></property>
        <property name="province" value="Ha Noi"></property>
        <property name="district" value="Ha Dong"></property>
    </bean>

</beans>
