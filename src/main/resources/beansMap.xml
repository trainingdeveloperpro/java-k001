<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Inject by constructor -->
    <bean id="person2" class="DIMap.Person">
        <constructor-arg name="name" type="String" value="HiThere"></constructor-arg>
        <constructor-arg name="age" type="int" value="30"></constructor-arg>
        <constructor-arg name="phones">
            <map>
                <entry key="0" value="098xxxxxxx" />
                <entry key="1" value="093xxxxxxx" />
            </map>
        </constructor-arg>
    </bean>

    <!-- Inject by setter -->
    <bean id="person" class="DIMap.Person">
        <property name="name" value="Duydz"></property>
        <property name="age" value="20"></property>
        <property name="phones">
            <map>
                <entry key="0" value="0987xxxxxx" />
            </map>
        </property>

    </bean>

    <bean id="address1" class="DIMap.Address">
        <property name="country" value="Viet Nam"></property>
        <property name="province" value="Ha Noi"></property>
        <property name="district" value="Thanh Xuan"></property>
    </bean>
    <bean id="address2" class="DIMap.Address">
        <property name="country" value="America"></property>
        <property name="province" value="Newyork"></property>
        <property name="district" value="LosAngeles"></property>
    </bean>
</beans>