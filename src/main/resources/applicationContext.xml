        </property>
        <property name="phoneNumbers">
            <set>
                <value>0564612918</value>
                <value>0128712856</value>
                <value>0386158136</value>
            </set>
        </property>
    </bean>

    <bean id="address4" class="com.trainingdeveloperpro.k001.danghuucanh.di.Address">
        <property name="country" value="Viet Nam"></property>
        <property name="province" value="Ha Noi"></property>
        <property name="district" value="Ha Dong"></property>
    </bean>

    <bean id="address3" class="com.trainingdeveloperpro.k001.danghuucanh.di.Address">
        <property name="country" value="Viet Nam"></property>
        <property name="province" value="Hoa Binh"></property>
