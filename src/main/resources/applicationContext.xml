<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


<!--    Inject by constructor-->
    <bean id="person4" class="com.trainingdeveloperpro.k001.danghuucanh.di.Person">
        <constructor-arg name="name" type="String" value="spring"></constructor-arg>
        <constructor-arg name="age" type="int" value="20"></constructor-arg>
        <constructor-arg name="addresses">
            <list>
                <ref bean="address3"/>
                <ref bean="address4"/>
              </list>
        </constructor-arg>
        <constructor-arg name="emails">
            <list>
                <value>huucanh@gmail.com</value>
              <value>canh@gmail.com</value>
              </list>
        </constructor-arg>
        <constructor-arg name="hobby">
            <map>
                <entry key="1" value="Doc sach"></entry>
                <entry key="2" value="Xem phim"></entry>
                <entry key="3" value="Choi the thao"></entry>
            </map>
        </constructor-arg>
        <constructor-arg name="phoneNumbers">
            <set>
                <value>0123456789</value>
                <value>0987654321</value>
            </set>
        </constructor-arg>
    </bean>
  
  <!--    Inject by setter-->
    <bean id="person3" class="com.trainingdeveloperpro.k001.danghuucanh.di.Person">
        <property name="name" value="cai gi the"></property>
        <property name="age" value="34"></property>
